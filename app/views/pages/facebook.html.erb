<div class="videos">
<!-- ##look into playing any one particular random video -->
  <div class = "left">
      <% vid = @foo[0] %>
      <div class = "video-frame">
      <% if vid["source_url"].to_s.length > 31 %>
        <iframe name="vframe" width="640" height="360"
          src="https://www.youtube.com/embed/<%= vid["source_url"].to_s[32..60] %>"
          frameborder="0" allowfullscreen></iframe>
        <br>
      <% else %>
        <iframe name="vframe" src="//player.vimeo.com/video/<%= vid["source_url"][18..50] %>"
          width="640" height="360" frameborder="0"
          webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
      </div>
      <% end %>
  </div>

    <div class = "right">
      <% vid = @foo[0..8] %>
      <% vid.each do |v| %>
          <div class = "moo-cow" >
          <% if vid[0]['source_url'].to_s.length > 31  %> <!--### Check these strings to find a better way to differentiate sources -->
            <a href="https://www.youtube.com/embed/<%= v["source_url"].to_s[32..60] %>?autoplay=1" target="vframe">
              <img src="<%= v['thumbnail_url'] %>">
              <!-- <div class = "video-feat-text"> -->
              <p> <%= v['caption'].html_safe %></p>
              <!-- </div> ### MAY NOT BE NECESSARY - and removing may
              be huge in future pagination.  changing div properties using
              css nth effects-->
            </a>
          </div>
          <% else %>
            <a href="//player.vimeo.com/video/<%= v["source_url"][18..50] %>" target="vframe">
              <img src="<%= v['thumbnail_url'] %>">
              <!-- <div class = "video-feat-text"> -->
              <p> <%= v['caption'].html_safe %></p>
              <!-- </div> ### MAY NOT BE NECESSARY - and removing may
              be huge in future pagination.  changing div properties using
              css nth effects -->
            </a>
          </div>
        <% end %>
      <% end %>
  </div>

