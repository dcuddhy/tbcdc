<div class="col-sm-8 blog-main">

<div class = "feeds">

  <% @blogs.each do |blog| %>
    <h2><%= link_to blog["title"], blog["url"], target: "_blank" %></h2>
    by <%= blog["author"] %> on <%= Date.parse(blog["published"]).strftime("%b %d, %Y") %>
    <% if blog["content"] %>
      <%= blog["content"][0 .. 1600].html_safe %>
      <!-- <%= truncate(blog["content"], length: 1600, separator: ' ').html_safe %> -->
      <% if blog["content"].length >= 1600 %>
        ...<br>
        <%= link_to "Read More!", blog["url"], target: "_blank" %>
      <% end %>
    <% else %>
      <%= blog["summary"][0 .. 1600].html_safe %>
      <% if blog["summary"].length >= 1600 %>
        ...<br>
        <%= link_to "Read More!", blog["url"], target: "_blank" %>
      <% end %>
    <% end %><br><br>
  <% end %>

</div>
  <br><br><br><br>

  <nav>
    <ul class="pager">
      <li><a href="#">Previous</a></li>
      <li><a href="#">Next</a></li>
    </ul>
  </nav>


</div><!-- /.blog-main -->

