<br>
<div class = "wrapper">
	<div class = "columns">

    <% @media.each do |fbook| %>
      <% if fbook['message'].to_s.length > 40 %>
          <div class = "pin">
            <h4><a href="https://www.facebook.com/<%= fbook['from']['id'] %>" target="_blank">
              <%= fbook['from']['name'] %></a></h4>
              <div class = "date">
                <%= fbook['created_time'].to_date.strftime("%b %d, %Y") %><br>
              </div>
            <% if fbook['picture'] %>
                <a href="<%= fbook['link'] %>" target="_blank">
                  <img src = "<%= fbook['picture'] %>">
                </a>
            <% end %>
            <% if fbook['description'] %>
              <div class = "description">
              <em><%= fbook['description'] %></em><br>
              </div>
            <% end %>
              <%= fbook['message'] %><br>
        </div>
      <% end %>
    <% end %>

  </div>
</div>

<center>
<%= paginate @media %>
</center>
